#include "lists.h"
/**
* int check_cycle - checks if a singly linked list has a cycle in it
* Return: 0 if there is no cycle
*         1 if there is a cycle
*
*/
int check_cycle(listint_t *list)
{
     listint_t *slow, *fast;

     if(list == NULL || list->NULL)
         return(0);
     slow = list->next;
     fast = list->next->next; 

     while(slow && fast && fast->next)
     {
    
           slow = slow->next;
           fast = fast->next;
        
           if(slow == fast)
              return(1);
     }
     return(0);
}

